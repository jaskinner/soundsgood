extends include/templates/layout

block vars
    - var header_transparent = true;
    - var header_one_page = true;


append css

append content

    // Hero
    section.module-cover.parallax.text-center.fullscreen(data-background="assets/images/module-2.jpg" data-jarallax-video="mp4:assets/video/hero.mp4" data-overlay="0.6")
        .container

            .row#home
                .col-md-12
                    h1.m-b-20: strong Sounds good
                    p.m-b-40 I bet Zach could really write something cool like a tagline
                    p
                        a(href="#team" class="btn btn-lg btn-circle btn-brand smoothscroll") Who we are
                        a(href="#" class="btn btn-lg btn-circle btn-outline-new-white smoothscroll") What we need
    // Hero end

    = "\n"

    // About

    section.module
        .container

            .row#about
                .col-md-6.m-auto.text-center

                    h1 Hello!
                    p.lead Thanks for stopping by. Check out our video below for a quick message.

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-9.m-auto
                    .modal-video-container
                        img(src="assets/images/static.gif" alt="")
                        a(href="https://www.youtube.com/watch?v=0aCbYxJ9gus" class="play-button")

    // About end

    = "\n"

    // Needs
    section.module
        .container

            .row#needs
                .col-md-6.m-auto.text-center

                    h1 What we need
                    p.lead People helping people

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-6.mx-auto
                    ul.checklist-items
                        +checklist("Filming location")
                        +checklist("Musical equipment")
                        +checklist("Very old van")
                        +checklist("Donations")
    // Needs end

    = "\n"

    // Who
    section.module
        .container

            .row#team
                .col-md-6.m-auto.text-center

                    h1 Who we are
                    p.lead We're a team of writers, actors, and musicians working together to laugh at each other

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-lg-4.col-md-6
                    +team("assets/images/team/jonathan.jpg", "Jonathan Skinner", "Producer / 'Jake'", "http://instagram.com/jon.on.fire",
                        "Jonathan is a theatre/film actor and singer/songwriter with training from UCB (NYC) and film credits including work with Lenovo and Audi.")
                .col-lg-4.col-md-6
                    +team("assets/images/team/chelsea.jpg", "Chelsea Cullen Skinner", "Director / 'Charleigh'", "http://chelseacullen.me",
                        "Chelsea is an actor with a BA in Theatre Education from Meredith College, with film credits including work with HBO and the Travel Channel.")
                .col-lg-4.col-md-6
                    +team("assets/images/team/jesse.jpg", "Jesse Pulchalski", "Composer / 'Boomer'", "http://instagram.com/j_bone_stallone",
                        "Jesse is a guitarist, songwriter, and performer who has been featured in Guitar Player Magazine as a rising guitarist to watch out for.")
                .col-lg-4.col-md-6.offset-md-2
                    +team("assets/images/team/christa.jpg", "Christa Giammattei", "Sound Engineer / 'Gia'", "http://cgiammatteisound.com",
                        "Christa is an audio engineer with past clients including VW Volkswagen, PBS, and National Geographic.")
                .col-lg-4.col-md-6
                    +team("assets/images/team/zach.jpg", "Zach Beck", "Head Writer / 'Ski'", "http://instagram.com/back_zecker",
                        "Zach is a writer with a degree in Literature and Creative Writing from UNC Asheville.")
    // Who end

    = "\n"

    // Form
    section.module
        .container

            .row#contact
                .col-lg-6.col-md-9.m-auto.text-center
                    h1 Let's talk.
                    p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-8.m-auto
                    form#contact-form(method="post" novalidate)
                        .row
                            .col-md-6
                                .form-group
                                    input.form-control(type="text" name="name" placeholder="Name" required="")
                                    p.help-block.text-danger
                            .col-md-6
                                .form-group
                                    input.form-control(type="email" name="email" placeholder="E-mail" required="")
                                    p.help-block.text-danger
                            .col-md-12
                                .form-group
                                    input.form-control(type="text" name="subject" placeholder="Subject" required="")
                                    p.help-block.text-danger
                            .col-md-12
                                .form-group
                                    textarea.form-control(name="message" placeholder="Message" rows="12" required="")
                            .col-md-12
                                p
                                    input(type="submit" class="btn btn-block btn-brand" value="Send Message")
                    // Ajax response
                    #contact-response.ajax-response.text-center
    // Form end

    = "\n"

    // Image
    section.module
        .container-fluid

            .row
                .col-md-12
                    img(src="assets/images/main/lake.jpg" alt="")
    // Image end
